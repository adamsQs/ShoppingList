<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ShoppingList"
             xmlns:converters="clr-namespace:ShoppingList.Converters"
             x:Class="ShoppingList.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToStrikethroughConverter x:Key="BoolToStrikethrough"/>
            <converters:BoolToStyleConverter x:Key="BoolToGrayStyle"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>